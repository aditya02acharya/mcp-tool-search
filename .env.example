# Environment: dev | stage | prod
ENVIRONMENT=dev

# Redis / ElastiCache
REDIS__HOST=localhost
REDIS__PORT=6379
REDIS__DB=0
REDIS__PASSWORD=
REDIS__SSL=false
REDIS__SESSION_TTL_SECONDS=3600
REDIS__MAX_CONTEXT_BYTES=104857600

# Embedding (vLLM + Qwen3)
EMBEDDING__BASE_URL=http://localhost:8000
EMBEDDING__MODEL_NAME=Qwen/Qwen3-Embedding-8B
EMBEDDING__DIMENSION=4096
EMBEDDING__BATCH_SIZE=32
EMBEDDING__QUERY_INSTRUCTION=Given a tool name and description, retrieve the most relevant tools for the user query
EMBEDDING__TIMEOUT_SECONDS=30.0

# SQLite Vector Index
INDEX__DB_PATH=data/tools.db
INDEX__USE_VEC_EXTENSION=true
INDEX__SIMILARITY_CHUNK_SIZE=500

# LLM (via LiteLLM proxy)
LLM__MODEL_NAME=gpt-4o-mini
LLM__API_BASE=http://localhost:4000
LLM__API_KEY=
LLM__MAX_TOKENS=2048
LLM__TEMPERATURE=0.0

# Upstream Tool Registry
REGISTRY__BASE_URL=http://localhost:4000
REGISTRY__API_KEY=
REGISTRY__SYNC_INTERVAL_SECONDS=300
REGISTRY__TIMEOUT_SECONDS=30.0

# TDWA Embedding Weights
TDWA__NAME_WEIGHT=0.15
TDWA__DESCRIPTION_WEIGHT=0.35
TDWA__PARAMS_WEIGHT=0.20
TDWA__QUESTIONS_WEIGHT=0.30
TDWA__NUM_SYNTHETIC_QUESTIONS=5

# Search
SEARCH__TOP_K=5
SEARCH__MIN_SCORE=0.1
SEARCH__HYBRID_ALPHA=0.7

# Server
SERVER__NAME=MCP Tool Router
SERVER__HOST=0.0.0.0
SERVER__PORT=8080
